---
import { darkTheme, lightTheme } from "../styles/theme";
import BookOpen from "@lucide/astro/icons/book-open";
import Terminal from "@lucide/astro/icons/terminal";
import Logo from "../../public/logo.svg";
const { hasCodeTabs = false, title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="color-scheme" content="dark" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} - eBPF.party` : 'eBPF.party'}</title>
    <style
      is:global
      set:html={`
:root {
  --color-bg-primary: ${darkTheme.bgPrimary};
  --color-background-secondary: ${darkTheme.bgSecondary};
  --color-code-bg: ${darkTheme.codeBg};
  --color-code-fg: ${darkTheme.codeFg};
  --color-text-primary: ${darkTheme.textPrimary};
  --color-text-secondary: ${darkTheme.textSecondary};
  --color-text-highlight: ${darkTheme.textHighlight};
  --color-accent: ${darkTheme.accent};
  --color-alert-bg: ${darkTheme.alertBg};
  --color-border: ${darkTheme.border};
  --color-navbar-bg: ${darkTheme.navbarBg};
  --color-navbar-border: ${darkTheme.navbarBorder};

  --astro-code-background: var(--color-code-bg);
  --astro-code-token-function: #61afef;
  --astro-code-token-keyword: #e5c07b;
  --astro-code-foreground: #e06c75;
  --astro-code-token-constant: var(--astro-code-token-keyword);
  --astro-code-token-string-expression: #98c379;
  --astro-code-token-comment: #7d8799;

}

@media (prefers-color-scheme: light) {
  :root {
    --color-bg-primary: ${lightTheme.bgPrimary};
    --color-background-secondary: ${lightTheme.bgSecondary};
    --color-code-bg: ${lightTheme.codeBg};
    --color-code-fg: ${lightTheme.codeFg};
    --color-text-primary: ${lightTheme.textPrimary};
    --color-text-secondary: ${lightTheme.textSecondary};
    --color-text-highlight: ${lightTheme.textHighlight};
    --color-accent: ${lightTheme.accent};
    --color-alert-bg: ${lightTheme.alertBg};
    --color-border: ${lightTheme.border};
    --color-navbar-bg: ${lightTheme.navbarBg};
    --color-navbar-border: ${lightTheme.navbarBorder};
    /* TODO */
    --astro-code-background: var(--color-code-bg);
    --astro-code-token-function: #61afef;
    --astro-code-token-keyword: #e5c07b;
    --astro-code-foreground: #e06c75;
    --astro-code-token-constant: var(--astro-code-token-keyword);
    --astro-code-token-string-expression: #98c379;
    --astro-code-token-comment: #7d8799;
  }
}

body {
  margin: 0;
  background: var(--color-bg-primary);
  color: var(--color-text-primary);
  font-family: sans-serif;
}`}
    ></style>
  </head>
  <body>
    <nav class="navbar">
      <div class="navbar-content">
        <div class="navbar-left">
          <a href="/" class="site-link">
            <Logo stroke="currentColor" class="logo" />
            <span class="site-name">eBPF.party</span>
          </a>
        </div>
        {
          hasCodeTabs && (
            <div class="navbar-tabs">
              <label for="tab-instructions" class="tab-toggle">
                <BookOpen size={18} />
              </label>
              <label for="tab-code" class="tab-toggle">
                <Terminal size={18} />
              </label>
            </div>
          )
        }
      </div>
    </nav>
    <main class="app-content">
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  .navbar {
    z-index: 1;
    border-bottom: 1px solid var(--color-navbar-border);
    background-color: var(--color-navbar-bg);
  }

  .navbar-content {
    max-width: 220ch;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 2rem;
    box-sizing: border-box;
    min-height: 60px;
  }

  .site-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: var(--color-accent);
  }

  .logo {
    height: 1.5rem;
    width: auto;
  }

  .site-name {
    font-weight: 600;
    font-size: 1.1rem;
  }

  .navbar-tabs {
    display: none;
  }

  .app-content {
    height: calc(100vh - 65px);
    max-width: 220ch;
    margin: 0 auto;
  }

  @media (max-width: 1366px) {
    body:has(#tab-instructions:checked) .app-content {
      /* height: 100%; */
    }

    .app-content {
      height: calc(100vh - 65px);
    }
    .navbar-tabs {
      display: flex;
      gap: 0;
      background: #111;
      border-radius: 6px;
      padding: 3px;
    }

    .tab-toggle {
      cursor: pointer;
      font-size: 1.25rem;
      padding: 0.35rem 0.6rem;
      border-radius: 4px;
      background: transparent;
      transition: all 0.2s;
      user-select: none;
      border: none;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #999;
    }

    body:has(#tab-instructions:checked) .tab-toggle[for="tab-instructions"],
    body:has(#tab-code:checked) .tab-toggle[for="tab-code"] {
      background: var(--color-accent);
      color: white;
    }

    .tab-toggle:hover {
      background: rgba(255, 255, 255, 0.1);
    }

    body:has(#tab-instructions:checked)
      .tab-toggle[for="tab-instructions"]:hover,
    body:has(#tab-code:checked) .tab-toggle[for="tab-code"]:hover {
      background: var(--color-accent);
    }
  }
</style>
