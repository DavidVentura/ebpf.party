---
import Layout from './Layout.astro';
import InteractiveEditor from "../components/InteractiveEditor.astro";
import ExerciseNav from "../components/ExerciseNav";

interface Props {
  chapterTitle: string;
  exerciseTitle: string;
  exerciseId: string;
  chapterId: number;
  hasCode: boolean;
  starterCode: string | null;
  prevExercise: any;
  nextExercise: any;
}

const {
  chapterTitle,
  exerciseTitle,
  exerciseId,
  chapterId,
  hasCode,
  starterCode,
  prevExercise,
  nextExercise
} = Astro.props;
---

<Layout hasCodeTabs={hasCode}>
  <Fragment slot="title">{chapterTitle} - {exerciseTitle}</Fragment>

  <div class="exercise-container">
      {hasCode &&
      (
        <input
          type="radio"
          name="mobile-tabs"
          id="tab-instructions"
          class="tab-input"
          checked
        />
        <input type="radio" name="mobile-tabs" id="tab-code" class="tab-input" />

        <div class="content tab-content">
          <div class="content-scroll">
            <div class="content-body">
              <h4>{chapterTitle}</h4>
              <h1>{exerciseTitle}</h1>
              <slot />
            </div>
            <ExerciseNav prevExercise={prevExercise} nextExercise={nextExercise} client:load />
          </div>
        </div>
      <div class="editor-wrapper tab-content">
        <InteractiveEditor
          starterCode={starterCode}
          exerciseId={exerciseId}
          chapterId={chapterId}
        />
      </div>
      )}

      {!hasCode && (
      <div class="content">
        <div class="content-scroll nocode">
          <div class="content-body">
            <h4>{chapterTitle}</h4>
            <h1>{exerciseTitle}</h1>
            <slot />
          </div>
          <ExerciseNav prevExercise={prevExercise} nextExercise={nextExercise} client:load />
        </div>
      </div>
      )}

  </div>
</Layout>

<style>
  h4 ~ h1,
  h4:has(~ h1) {
    padding: 0px;
    margin: 0.2em 0px 0px 0px;
    line-height: 1em;
  }
  h1 {
    font-size: 30px;
  }

  .exercise-container {
    display: flex;
    height: 100%;
  }

  .content {
    flex: 1;
    overflow-y: auto;
    background-color: var(--color-bg-primary);
    color: var(--color-text-primary);
  }
  .content-scroll {
    padding: 0.5rem 2rem 0rem 2rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 100%;
    box-sizing: border-box;
  }

  .content-scroll.nocode {
    max-width: 100ch;
    margin: 0px auto;
  }

  .tab-input {
    display: none;
  }

  .editor-wrapper {
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  @media (max-width: 1280px) {
    .exercise-container {
      flex-direction: column;
    }

    .tab-content {
      display: none;
    }

    #tab-instructions:checked ~ .content.tab-content {
      display: block;
      flex: 1;
      overflow-y: auto;
    }

    #tab-code:checked ~ .editor-wrapper.tab-content {
      display: flex;
      flex: 1;
    }

    .content {
      flex: none;
      overflow-y: visible;
    }

    .content-scroll {
      overflow-y: visible;
    }
  }
  /* mdx rules */
  .content-scroll  :global(p, h1,h2,h3, h4, code, a, li) {
    color: var(--color-text-primary);   
  }

  .content-scroll :global(h2) {
    margin: 0.5em 0px;
  }
  .content-scroll :global(p),
  .content-scroll :global(pre:has(code)) {
    margin: 8px 0px;
  }
  .content-scroll :global(pre) {
    padding: 10px;
    border-radius: 4px;
    overflow-x: auto;
  }
  .content-scroll :global(:not(pre) > code) {
    background-color: var(--color-code-bg);
    border-radius: 4px;
    padding: 4px;
  }

  .content-scroll :global(details[open]::details-content) {
    padding: 0.5rem;
    border: 1px dotted black;
  }

  .content-scroll :global(p ~ ol, p ~ ul) {
    margin: 8px 0px;
  }

  .content-scroll :global(ul) {
    padding-left: 20px;
  }

  .content-scroll :global(kbd) {
    background-color: #eeeeee;
    border-radius: 3px;
    border: 1px solid #b4b4b4;
    box-shadow:
      0 1px 1px rgb(0 0 0 / 0.2),
      0 2px 0 0 rgb(255 255 255 / 0.7) inset;
    color: #333333;
    display: inline-block;
    font-size: 0.85em;
    line-height: 1;
    padding: 4px 4px;
    white-space: nowrap;
  }
</style>
