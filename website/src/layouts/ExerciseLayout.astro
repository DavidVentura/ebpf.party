---
import InteractiveEditor from "../components/InteractiveEditor.astro";
import { readFile } from "node:fs/promises";
import { join } from "node:path";

const { frontmatter } = Astro.props;

let starterCode = frontmatter?.starterCode || "";

if (frontmatter?.codeFile) {
  const codeFilePath = join(
    process.cwd(),
    "public/exercises-code",
    frontmatter.codeFile
  );
  starterCode = await readFile(codeFilePath, "utf-8");
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{frontmatter?.title || "Exercise"}</title>
  </head>
  <body>
    <div class="container">
      <div class="content">
        <slot />
      </div>
      <InteractiveEditor starterCode={starterCode} />
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  .container {
    display: flex;
    height: 100vh;
  }

  .content {
    flex: 1;
    padding: 2rem;
    overflow-y: auto;
  }

  .content :global(p),
  .content :global(pre:has(code)) {
    margin: 8px 0px;
  }
  .content :global(pre) {
    padding: 10px;
    border-radius: 4px;
    overflow-x: auto;
  }
  .content :global(:not(pre) > code) {
    background-color: rgb(220 220 220);
    border-radius: 4px;
    padding: 4px;
  }

  .content :global(details[open]::details-content) {
    padding: 0.5rem;
    border: 1px dotted black;
  }
</style>
