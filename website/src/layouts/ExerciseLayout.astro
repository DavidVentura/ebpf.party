---
const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{frontmatter?.title || 'Exercise'}</title>
	</head>
	<body>
		<div class="container">
			<div class="content">
				<slot />
			</div>
			<div class="editor">
				<textarea placeholder="Code editor..."></textarea>
			</div>
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	.container {
		display: flex;
		height: 100vh;
	}

	.content {
		flex: 1;
		padding: 2rem;
		overflow-y: auto;
	}

	.editor {
		flex: 1;
		background: #1e1e1e;
	}

	.editor textarea {
		width: 100%;
		height: 100%;
		background: #1e1e1e;
		color: #d4d4d4;
		border: none;
		padding: 1rem;
		font-family: monospace;
		resize: none;
	}

	.editor textarea:focus {
		outline: none;
	}
</style>
