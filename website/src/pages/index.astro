---
import Layout from "../layouts/Layout.astro";
import { CONTENT_METADATA } from "../lib/exercises-metadata";
import ExerciseList from "../components/ExerciseList";
---

<Layout>
  <div class="home">
    <h1>eBPF Exercises</h1>
    <p>
      Learn eBPF through hands-on exercises. Write, compile, and run programs
      directly in your browser.
    </p>
    <p>Curious about how it works? <a href="/how-it-works">Here's an explanation.</a></p>
    <ExerciseList client:load metadata={CONTENT_METADATA} />
  </div>
</Layout>

<style>
  .home {
    padding: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .home h1 {
    margin-bottom: 2rem;
    color: var(--color-text-primary);
  }

  .home p {
    margin-bottom: 2rem;
  }
  a {
    color: var(--color-text-primary);
  }
</style>
