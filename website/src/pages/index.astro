---
import Layout from "../layouts/Layout.astro";
import { CONTENT_METADATA } from "../lib/exercises-metadata";
import ExerciseList from "../components/ExerciseList";
---

<Layout>
  <div class="home">
    <h1>eBPF Exercises</h1>
    <p>
      Learn eBPF through hands-on exercises. Write, compile, and run programs
      directly in your browser.
    </p>
    <ExerciseList client:load metadata={CONTENT_METADATA} />
  </div>
</Layout>

<style>
  .home {
    padding: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .home h1 {
    margin-bottom: 2rem;
    color: var(--color-text-primary);
  }

  :global(.chapter) {
    margin-bottom: 2rem;
  }

  :global(.chapter h2) {
    color: var(--color-text-primary);
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }

  :global(.chapter-number) {
    color: var(--color-accent);
    font-weight: 600;
  }

  :global(.chapter ul) {
    list-style: none;
    padding: 0;
    margin-left: 1rem;
  }

  :global(.chapter li) {
    margin: 0.5rem 0;
  }

  :global(.chapter a) {
    color: #0066cc;
    text-decoration: none;
    font-size: 1rem;
  }

  :global(.chapter a:hover) {
    text-decoration: underline;
  }

  :global(.completion-indicator) {
    margin-left: 0.5rem;
    color: var(--color-accent);
    font-weight: bold;
    font-size: 1.1em;
  }
</style>
