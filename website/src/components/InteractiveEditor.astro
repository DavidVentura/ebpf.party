---
import CodeEditorWithViewer from "./CodeEditorWithViewer.tsx";
import NoScript from "../content/NoScript.mdx";

const { starterCode } = Astro.props;
---

<div class="interactive-editor">
  <noscript>
    <div class="noscript-content">
      <NoScript />
    </div>
  </noscript>
  <CodeEditorWithViewer client:load starterCode={starterCode} />
</div>

<style>
  .interactive-editor {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .noscript-content {
    flex: 1;
    padding: 2rem;
    background: #f5f5f5;
    overflow-y: auto;
  }
</style>
