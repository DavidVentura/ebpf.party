---
import App from "./App.tsx";
import NoScript from "../content/NoScript.mdx";

const { starterCode, exerciseId } = Astro.props;

if (!exerciseId) {
  throw new Error("Missing exerciseId in frontmatter");
}
if (!starterCode) {
  throw new Error("Missing starterCode");
}
---

<div class="interactive-editor">
  <noscript>
    <div class="noscript-content">
      <NoScript />
    </div>
  </noscript>
  <App client:only="react" starterCode={starterCode} exerciseId={exerciseId} />
</div>

<style>
  .interactive-editor {
    flex: 1;
    display: flex;
    flex-direction: column;
    min-height: 400px;
  }

  .noscript-content {
    flex: 1;
    padding: 2rem;
    background: #f5f5f5;
    overflow-y: auto;
  }
</style>
